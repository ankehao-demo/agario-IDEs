{
  "name": "windsurf-demo",
  "version": "1.0.0",
  "description": "Agar.io clone game",
  "main": "app.py",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/__tests__/**",
      "!static/js/__mocks__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  }
}
